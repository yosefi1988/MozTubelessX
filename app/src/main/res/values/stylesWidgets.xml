    <style name="TitleBarImage">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_centerInParent">true</item>
    </style>



    <!-- This configures the styles for the text within the Toolbar  -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="CollapsingToolbarLayoutExpandedTextStyle" parent="TubelessThemeBase">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">0.1sp</item>
    </style>
    <style name="TubelessDayTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
