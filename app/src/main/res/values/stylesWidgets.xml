<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Button-->
    <style name="AppTheme.DayButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/day_white_text</item>
        <item name="android:background">@drawable/button</item>
<!--        <item name="android:textSize">18dp</item>-->
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--TextView-->
    <style name="Style_TextView_Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>
    <style name="Style_TextView_Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
<!--        android:fontFamily="@font/iransans"-->
    </style>
    <style name="Style_TextView_Object">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Style_TextView_Object_Colorful" parent="Style_TextView_Object">
        <item name="android:textColor">@color/fb_foreground_color</item>
    </style>
    <!--TextView-->
<!--    radio-->
    <style name="MyRadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
<!--        <item name="android:textSize">5dp</item>-->
<!--        <item name="colorControlNormal">@color/tubelessColor_button_normal</item>-->
<!--        <item name="colorControlActivated">@color/tubelessColor_button_normal</item>-->
<!--        <item name="colorAccent">@color/tubelessColor_button_normal</item>-->


        <item name="colorControlNormal">@color/background_tab_pressed</item>
        <item name="colorControlActivated">@color/background_tab_pressed</item>
        <item name="colorAccent">@color/background_tab_pressed</item>
    </style>


    <style name="ThemeOverlay.App.FloatingActionButton" parent="">
<!--        <item name="colorSecondary">@color/tubelessColor_button_normal</item>-->
<!--        <item name="colorOnSecondary">@color/tubelessColor_button_normal</item>-->
<!--        <item name="colorOnSurface">@color/tubelessColor_button_normal</item>-->
<!--        <item name="colorAccent">@color/tubelessColor_button_normal</item>-->
        <item name="colorSecondary">@color/background_tab_pressed</item>
        <item name="colorOnSecondary">@color/background_tab_pressed</item>
        <item name="colorOnSurface">@color/background_tab_pressed</item>
        <item name="colorAccent">@color/background_tab_pressed</item>

<!--        <item name="colorPrimary">@color/tubelessColor_button_normal</item>-->
<!--        <item name="colorPrimaryDark">@color/tubelessColor_button_normal</item>-->
    </style>

    <style name="TitleBarImage">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <!--EditText-->
    <style name="AppTheme.DayEditText" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/bg_search</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">start</item>
        <item name="android:textDirection">locale</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:textColorHint">@color/day_white_hint_text</item>
    </style>


    <!-- This configures the styles for the text within the Toolbar  -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">21sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>



</resources>
