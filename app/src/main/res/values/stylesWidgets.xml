<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Button-->
    <style name="Style.Button.Tubeless" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/day_white_text</item>
        <item name="android:background">@drawable/widget_button</item>
<!--        <item name="android:textSize">18dp</item>-->
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/iransans</item>
    </style>
    <style name="Style.Button.SB24" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/button_textColor</item>
        <item name="android:background">@drawable/widget_button</item>
        <!--        <item name="android:textSize">18dp</item>-->
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--End Button-->

    <!--TextView-->

    <style name="Style.TextView.TubelessTheme" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/textview_default</item>
        <item name="android:text"></item>
    </style>
    <style name="Style_TextView_Tubeless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Style.TextView.Tubeless.Colorful" parent="Style_TextView_Tubeless">
        <item name="android:textColor">@color/textview_colorful</item>
    </style>
    <style name="Style_TextView_Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Large</item>
    </style>
    <style name="Style_TextView_Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <!--        android:fontFamily="@font/iransans"-->
    </style>
    <!--End TextView-->

    <!--EditText-->
    <style name="Style.EditText.Tubeless" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/widget_edittext</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">start</item>
        <item name="android:textDirection">locale</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:textColorHint">@color/edittext_hint_text</item>
    </style>

    <style name="Style.EditText_direct.Tubeless" parent="@style/Style.EditText.Tubeless">
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--End EditText-->

    <style name="Style.RelativeLayout_direct.Tubeless" parent="@android:style/Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textDirection">rtl</item>
        <item name="android:orientation">vertical</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:background">@color/fb_background_color</item>
    </style>





    <!--    radio-->
    <style name="MyRadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
