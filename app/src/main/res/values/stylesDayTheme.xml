<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Theme-->
    <style name="AppDayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/tubelessColor_blue_01</item>
        <item name="colorPrimaryDark">@color/tubelessColor_blue_01</item>
        <item name="colorAccent">@color/tubelessColor_blue_01</item>

        <item name="buttonStyle">@style/AppTheme.DayButton</item>
        <item name="android:buttonStyle">@style/AppTheme.DayButton</item>

        <item name="android:editTextStyle">@style/AppTheme.DayEditText</item>
        <item name="editTextStyle">@style/AppTheme.DayEditText</item>

        <item name="radioButtonStyle">@style/MyRadioButton</item>
        <item name="android:radioButtonStyle">@style/MyRadioButton</item>

        <item name="android:textViewStyle">@style/Theme.DayTextView</item>
    </style>

    <style name="TubelessDayTheme" parent="AppDayTheme">

    </style>

    <style name="TubelessDayTheme.NoActionBar"  parent="AppDayTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CollapsingToolbarLayoutExpandedTextStyle" parent="AppDayTheme">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">0.1sp</item>
    </style>

    <style name="ThemeFullSCreenX" parent="TubelessDayTheme">
        <!--        <item name="windowActionBar">false</item>-->
        <!--        <item name="windowNoTitle">true</item>-->
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
        <!--        <item name="android:windowNoTitle">true</item>-->
        <!--        <item name="android:windowFullscreen">false</item>-->
    </style>

    <style name="Theme.DayTextView" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/colorTextGry</item>
        <item name="android:text">@string/textview_normal_text</item>
    </style>

    <style name="TubelessDayTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!--    <style name="TubelessDayTheme.NoActionBar.NoTranslucent2" />-->
    <!--    <style name="TubelessDayTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />-->
</resources>
