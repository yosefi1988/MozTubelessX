<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetLayout"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:gravity="top|center"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/fb_background_color"
    app:behavior_hideable="true"
    app:behavior_peekHeight="60dp"
    app:layout_behavior="@string/bottom_sheet_behavior">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layoutDirection="locale"
        android:orientation="vertical"
        android:padding="20dp" >

        <TextView
            android:id="@+id/textView"
            style="@style/Style_TextView_Text"
            android:text="@string/text_for_pay_type"  />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="locale"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/pay_by_wallet"
                android:layout_weight="1"
                android:text="@string/pay_by_wallet"
                style="@style/Style.Button.Tubeless" />
            <Button
                android:id="@+id/pay_direct"
                android:layout_weight="1"
                android:text="@string/pay_direct"
                style="@style/Style.Button.Tubeless" />

        </LinearLayout>


        <View
            android:id="@+id/textViewChangeToDiscountCardHr"
            android:layout_marginTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:visibility="gone"
            android:layout_marginEnd="10dp" />

        <View
            android:layout_marginTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:visibility="gone"  />

    </LinearLayout>

</LinearLayout>

