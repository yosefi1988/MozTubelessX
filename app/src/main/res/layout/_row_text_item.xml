<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/fb_background_color" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_border"
        android:orientation="horizontal"
        android:padding="5sp"
        android:layout_margin="5sp">
        <LinearLayout
            android:id="@+id/linearLayoutCenter"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:orientation="vertical">

            <TextView android:id="@+id/textViewTitle" style="@style/Style_TextView_Title"/>

            <ImageView
                android:id="@+id/imageviewPicture"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:layout_margin="1dp"
                android:adjustViewBounds="true"
                android:layout_centerInParent="true"  />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/textViewLocation" style="@style/Style_TextView_Text" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layoutDirection="rtl"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/png_time"
                android:padding="4dp"
                style="@style/TitleBarImage" />
            <TextView android:id="@+id/textViewDate" style="@style/Style_TextView_Text" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left">
            <ImageView
                android:id="@+id/imageviewMessage"
                android:src="@drawable/png_comments"
                style="@style/TitleBarImage" />
            <ImageView
                android:id="@+id/imageviewfav"
                android:src="@drawable/png_star"
                style="@style/TitleBarImage" />
            <ImageView
                android:id="@+id/imageViewpay"
                android:src="@drawable/png_blue_eye"
                style="@style/TitleBarImage" />
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp" >
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="0dp"  />
    </LinearLayout>

</LinearLayout>