<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Button-->
    <style name="Style.Button.Tubeless" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/day_white_text</item>
        <item name="android:background">@drawable/widget_button</item>
        <!--        <item name="android:textSize">18dp</item>-->
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Style.Button.SB24" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/button_textColor</item>
        <item name="android:background">@drawable/widget_button</item>
        <!--        <item name="android:textSize">18dp</item>-->
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--End Button-->

    <!--TextView-->
    <!--End TextView-->

    <!--EditText-->
    <style name="Style.EditText.Tubeless" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/widget_edittext</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">start</item>
        <item name="android:textDirection">locale</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:textColorHint">@color/edittext_hint_text</item>
    </style>
    <!--End EditText-->


</resources>
